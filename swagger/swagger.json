{
   "swagger":"2.0",
   "info":{
      "title":"Node API with Swagger Demo",
      "description":"Below is the demo of Node API using Swagger and Postgres database",
      "version":"1.0"
   },
   "produces":[
      "application/json"
   ],
   "tags":[
      {
         "name":"Flight",
         "description":"Operations about Flight"
      }
   ],
   "paths":{
      "/add_flight":{
         "post":{
            "tags":[
               "Flight"
            ],
            "summary":"View Flight",
            "operationId":"add_flight",
            "parameters":[
               {
                  "name":"flight_source",
                  "in":"formData",
                  "required":true,
                  "type":"string"
               },
               {
                  "name":"flight_destination",
                  "in":"formData",
                  "type":"string",
                  "required":"true"
               },
               {
                  "name":"flight_departure_date",
                  "in":"formData",
                  "type":"string",
                  "required":"true",
                  "default": "2020-06-18 08:00:19"
               },
               {
                  "name":"flight_arrival_date",
                  "in":"formData",
                  "type":"string",
                  "required":"true",
                  "default": "2020-06-20 08:00:19"
               },
                {
                  "name":"flight_capacity",
                  "in":"formData",
                  "required":true,
                  "type":"number"
               },
                {
                  "name":"flight_type",
                  "in":"formData",
                  "required":true,
                  "type":"string",
                  "enum":[
                     "Domestic",
                     "International"
                  ]
               }
            ],
            "responses":{
               "200":{
                  "description":"Successful operation"
               },
               "408":{
                  "description":"Error while adding flight"
               }
            }
         }
      },
      "/view_flight":{
         "get":{
            "tags":[
               "Flight"
            ],
            "summary":"Get list of flights",            
            "operationId":"view_flight",
             "parameters":[
                {
                  "name":"id",
                  "in":"formData",
                  "type":"integer",
                  "format": "int64"
               },
               {
                  "name":"flight_source",
                  "in":"formData",
                  "type":"string"
               },
               {
                  "name":"flight_type",
                  "in":"formData",
                  "type":"string",
                  "enum":[
                     "Domestic",
                     "International"
                  ]
               }
            ],
            "responses":{
               "200":{
                  "description":"Successful operation"
               },
               "408":{
                  "description":"Error while fetching list"
               }
            }
         }
      },
      "/delete_flight":{
         "delete":{
            "tags":[
               "Flight"
            ],
            "summary":"Delete flight by ID",            
            "operationId":"delete_flight",
            "parameters":[
               {
                  "name":"id",
                  "in":"formData",
                  "required":true,
                  "type":"integer",
                  "format": "int64"
               }
            ],
            "responses":{
               "400":{
                  "description":"Invalid ID"
               },
               "404":{
                  "description":"Flight not found"
               }
            }
         }
      }
   }
}
